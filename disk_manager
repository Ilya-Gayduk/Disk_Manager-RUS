#!/bin/bash

#
# Блок меню
#
#  0    - нажата клавиша OK
#  1    - нажата клавиша CANCEL
#  2    - нажата клавиша HELP
#  3    - нажата клавиша EXTRA
#  255  - нажата клавиша ESC
#
OPTION=$(dialog --title "Disk_Manager" --menu "Выберитие действие:" 15 60 4 \
"1" "Список носителей" \
"2" "Конфигурации носителей" \
"3" "Диагностика носителей"  \
"4" "Информация о носителях" 3>&1 1>&2 2>&3)
#
# Конец блока меню
#
#
# Начало скриптов вкладок
#
case $OPTION in
	1)
		dialog --msgbox "Здравствуй, $USER! Данная страница в разработке!" 10 100 
	;;

	2)
		dialog --msgbox "Здравствуй, $USER! Данная страница в разработке!" 10 100 
	;;

	3)
		dialog --msgbox "Здравствуй, $USER! Данная страница в разработке!" 10 100 
	;;

	4)
		dialog --msgbox "Здравствуй, $USER! Данная страница в разработке!" 10 100 
	;;

	*)
		echo "Выход"
	;;
esac
